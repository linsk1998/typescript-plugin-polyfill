{
	"compilerOptions": {
		"lib": [ "DOM", "ESNext" ],
		"target": "ESNext",
		"module": "commonjs",
		"moduleDetection": "force",
		"esModuleInterop": false,
		"strict": false,
		"skipLibCheck": true,
		"outDir": "dist",
		"rootDir": "src",
		"declaration": false,
		"sourceMap": false
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist",
		"tests/**/*"
	]
}
